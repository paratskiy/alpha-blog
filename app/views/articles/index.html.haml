%h1 Article listing page

%table
  %thead
    %tr
      %th Title
      %th Description
      %th{colspan: 3} Action
  %tbody
    - @articles.each do |article|
      %tr
        %td= article.title  
        %td= article.description
        %td= link_to 'Show', article
        %td= link_to 'Edit', edit_article_path(article)
        %td= link_to 'Delete', article, method: :delete, data: {confirm: 'Are you sure?'}
%p
  = link_to 'Create new article', new_article_path
  |
  = link_to 'Return to home page', :root