%h1.text-center.mt-4 Categories
.flickr_pagination
  = will_paginate @categories, :container => false
.container
  - @categories.each do |category|
    .row.justify-content-center
      .col-md-4.mt-4
        .card.text-center.shadow.mb-5.bg-white.rounded
          .card-body
            %h5.card-title= link_to category.name, category, class: "text-success"
            %p.card-text= pluralize(category.articles.count, "article")
          .card-footer.text-muted
            %small
              Created #{time_ago_in_words(category.created_at)} ago,
              edited #{time_ago_in_words(category.updated_at)} ago
.flickr_pagination.mb-4
  = will_paginate @categories, :container => false

