%h1.text-center.mt-4 Alpha Bloggers
.flickr_pagination
  = will_paginate @users, :container => false
.container
  - @users.each do |user|
    .row.justify-content-center
      .col-8.mt-4
        .card.text-center.shadow.mb-5.bg-white.rounded
          .card-header.font-italic
            = link_to user.username, user
          .card-body
            %h5.card-title
              = link_to gravatar_for(user, size: 150), user
            %p.card-text= pluralize(user.articles.count, "article")
            = link_to "View profile", user, class: "btn btn-outline-success"
            - if logged_in?
              - if current_user == user
                = link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-info"
              - if current_user.admin?
                = link_to "Delete user", user, class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure you want to delete the user account and all associated articles?"}
          .card-footer.text-muted
            %small
              Joined #{time_ago_in_words(user.created_at)} ago
.flickr_pagination.mb-4
  = will_paginate @users, :container => false
