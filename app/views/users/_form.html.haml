.container
  .row.justify-content-center
    .col-10
      = render 'shared/error_messages', obj: @user
      = form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f|
        .form-group.row
          = f.label :username, class: "col-2 col-form-label text-light"
          .col-10
            = f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username"
        .form-group.row
          = f.label :email, class: "col-2 col-form-label text-light"
          .col-10
            = f.email_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "Enter your email address"
        .form-group.row
          = f.label :password, class: "col-2 col-form-label text-light"
          .col-10
            = f.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "Choose a password"
        .form-group.row.justify-content-center
          = f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg")
    .mb-3
      = link_to '[ Cancel and return to articles listing ]', :articles, class: "text-info"
